{% extends 'base.html.twig' %}

{% block title %}GarageVP - Connexion 
{% endblock %}

{% block body %}
    <div class='container'>
        <h1 class='mt-4'> Formulaire de connexion</h1>

        {% if error %}
            <div class="alert alert-danger">
              {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action='{{ path('security.login') }}' method='post'>
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" id="username" 
                name="_username" placeholder="exemplegaragevp.fr" value="{{ last_username }}">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
           </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" 
                name= '_password' placeholder="********" autocomplete="off">
            </div>
            <button type='submit' class'btn btn-primary'>
                se connecter
            </button>
        </form>
    </div>
{% endblock %}
